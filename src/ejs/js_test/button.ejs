<style>
  * {
    box-sizing: border-box;
  }

  .button {
    border: 1px solid red;
    padding: 30px;
    display: inline-block;
    color: beige;
    text-decoration: none;
    position: relative;
  }
  .button::before{
    position: absolute;
    box-sizing: border-box;
    width: 0;
    height: 0;
    top: 0;
    right: 0;
    content:"";
    display: block;
    z-index: -1;
    transition: 0.3s ease-in-out;
    transform: rotate(360deg);
    background: linear-gradient(
          to top right,
          rgb(255 255 255 / 0%) 50%,
          red 50%
        )
        no-repeat bottom left/100% 50%,
      linear-gradient(
          to bottom right,
          rgb(255 255 255 / 0%) 50%,
          blue 50%
        )
        no-repeat top right/100% 50%;
  }
  .button::after{
    width: 0;
    height: 0;
    transition: 0.3s ease-in-out;
    transform: rotate(360deg);
    position: absolute;
    box-sizing: border-box;
    z-index: -1;
    content:"";
    display: block;
    bottom: 0;
    left: 0;
    background: linear-gradient(
          to bottom left,
          rgb(255 255 255 / 0%) 50%,
          yellow 50%
        )
        no-repeat top left/100% 50%,
      linear-gradient(
          to top left,
          rgb(255 255 255 / 0%) 50%,
          green 50%
        )
        no-repeat bottom right/100% 50%;  }
        .button:hover::before,.button:hover::after{
          width: 100%;
        height: 200%;

        }
</style>

